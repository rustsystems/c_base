<%- include partials/header %>



<div class="container-fluid">
	<div class="row no-gutter">
		<div class="col-xl-5 col-lg-5 col-md-5 col-sm-12 col-xm-12">
			<div id="identify-patient">
				<form action="/record" method="POST">
				    <div class="form-group">
					    <label for="usr">Patient Name:</label>
				      	<input type="text" class="form-control" name="patientName" id="usr" placeholder="Full Name">
				    </div>
				    <div class="form-group">
				      	<label for="usr">Patient DOB:</label>
				     	<input type="text" class="form-control" name="patientDOB" id="usr" placeholder="MM/DD/YYYY">
				    </div>
				    <div class="form-group">
                    	<button class="btn btn-lg btn-primary btn-block">Enter</button>
                	</div>
				    <!-- <div class="form-group">
				      <label for="pwd">Password:</label>
				      <input type="password" class="form-control" id="pwd">
				    </div> -->
				</form>
			</div>
		</div>

		<div class="col-xl-7 col-lg-7 col-md-7 col-sm-12 col-xm-12">
			<div id="navbar-and-transcript">
				<ul class="nav nav-tabs">
				    <li class="active" id="nav-amazon-tab" role="presentation">
				    	<a data-toggle="tab" href="#amazon-navtab">Amazon</a></li>
				    <li id="nav-google-tab" role="presentation">
				    	<a data-toggle="tab" href="#google-navtab">Google</a></li>
				    <li id="nav-ibm-tab" role="presentation">
				    	<a data-toggle="tab" href="#ibm-navtab">IBM</a></li>
				</ul>

				<div class="tab-content">
				    <div id="amazon-navtab" class="tab-pane fade in active" aria-labelledby="nav-amazon-tab">
				      <p>AMAZON TRANSCRIPT BELOW</p>
				    </div>
				    <div id="google-navtab" class="tab-pane fade" aria-labelledby="nav-google-tab">
				      <p>GOOGLE TRANSCRIPT BELOW</p>
				    </div>
				    <div id="ibm-navtab" class="tab-pane fade" aria-labelledby="nav-ibm-tab">
				      <p>IBM TRANSCRIPT BELOW</p>
				    </div>
				</div>
			</div>
		</div>  
	</div>
</div>


